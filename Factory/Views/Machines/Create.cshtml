@model Factory.Models.Machine

<h4>Add a new Machine</h4>
@using (Html.BeginForm())
{
  <div class="container">
    @Html.LabelFor(model => model.MachineType)
    @Html.TextBoxFor(model => model.MachineType, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.Operational)<br/>
    Yes
    @Html.RadioButtonFor(m => m.Operational,"Yes")<br/>
    No
    @Html.RadioButtonFor(m => m.Operational,"No")<br/>
    @Html.LabelFor(model => model.InspectionDate)
    @Html.TextBoxFor(model => model.InspectionDate, new { @class = "text", type = "text", required = "required" })<br />
    
    <input type="submit" value="Add new Machine" />
  </div>  
}
<p>@Html.ActionLink("Show all Machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

@{
  Layout = "_Layout";
}
