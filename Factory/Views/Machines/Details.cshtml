@model Factory.Models.Machine;

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.MachineType): @Html.DisplayFor(model => model.MachineType)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Machine does not contain any engineers</p>
}
else
{
  <h4>engineer the Machine contains:</h4>
  
  @foreach(var join in Model.JoinEntities)
  {
    @join.Engineer.Name
    @using (Html.BeginForm("DeleteEngineer", "Machines"))
    {
      <div class="container">
        @Html.Hidden("joinId", @join.MachineEngineerId)
        <input type="submit" value="Delete"/>
      </div>  
    }
  }
  
}
<p>@Html.ActionLink("Add a Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Back to Machine", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })
  <p>@Html.ActionLink("Home", "Index", "Home")</p>

  @{
  Layout = "_Layout";
}
