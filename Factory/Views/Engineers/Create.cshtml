@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>

@using (Html.BeginForm())
{
  <div class="container">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    @Html.LabelFor(model => model.JoinDate)
    @Html.EditorFor(model => model.JoinDate, new { @class = "text", type = "text", required = "required" })
    @Html.LabelFor(model => model.Active)<br/>
    Yes
    @Html.RadioButtonFor(model => model.Active,"Yes")<br/>
    No
    @Html.RadioButtonFor(model => model.Active,"No")<br/>
    
    <input type="submit" value="Add new Engineer" class="btn btn-default" />
  </div>
}
<p>@Html.ActionLink("Show all Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

@{
  Layout = "_Layout";
}
